<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ProxyEndpoint name="default">
    <Description/>
    <FaultRules/>
    <PreFlow name="PreFlow">
        <Request>
            <Step>
                <Name>ExtractVariables-1</Name>
            </Step>
            <Step>
                <Name>ResponseCache-1</Name>
            </Step>
        </Request>
        <Response>
            <Step>
                <Name>ResponseCache-1</Name>
            </Step>
            <Step>
                <Name>JSON2XML</Name>
            </Step>
            <Step>
                <Name>XSLT-Paginate</Name>
            </Step>
            <Step>
                <Name>XML-to-JSON-1</Name>
            </Step>
            <Step>
                <Condition>paginatedResponse == "{}" </Condition>
                <Name>RaiseFault</Name>
            </Step>
            <Step>
                <Name>AssignMessage-1</Name>
            </Step>
        </Response>
    </PreFlow>
    <PostFlow name="PostFlow">
        <Request/>
        <Response/>
    </PostFlow>
    <Flows>
        <Flow name="get-payments">
            <Description/>
            <Request/>
            <Response/>
            <Condition>(proxy.pathsuffix MatchesPath "gov_il_payments/search") and (request.verb = "GET")</Condition>
        </Flow>
    </Flows>
    <HTTPProxyConnection>
        <BasePath>/gov_il_payments/search</BasePath>
        <Properties/>
        <VirtualHost>default</VirtualHost>
        <VirtualHost>secure</VirtualHost>
    </HTTPProxyConnection>
    <RouteRule name="default">
        <TargetEndpoint>default</TargetEndpoint>
    </RouteRule>
</ProxyEndpoint>